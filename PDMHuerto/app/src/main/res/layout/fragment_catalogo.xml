<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_catalogo_bt_1"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:text="Semillas"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fragment_catalogo_bt_2"
        app:layout_constraintBottom_toTopOf="@id/fragment_catalogo_bt_3"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_catalogo_bt_2"
        android:layout_width="160dp"
        android:layout_height="100dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/fragment_catalogo_bt_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_catalogo_bt_4"
        android:text="Herramientas"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_catalogo_bt_3"
        android:layout_width="160dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_catalogo_bt_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fragment_catalogo_bt_4"

        android:text="Macetas"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_catalogo_bt_4"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:text="Tierra"
        app:layout_constraintStart_toEndOf="@id/fragment_catalogo_bt_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_catalogo_bt_2"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>